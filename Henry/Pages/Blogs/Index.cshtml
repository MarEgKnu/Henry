@page
@model Henry.Pages.Blogs.IndexModel
@{
}

<h1>List of blogs</h1>

<p>
    <a asp-page="CreateBlog">Create a new blog</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Content</th>
            <th>CreatorUserId</th>
            <th>Created</th>
            <th>LastUpdated</th>
            <th>Picture</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Blogs)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.Content</td>
                <td>@item.CreatorUserId</td>
                <td>@item.Created</td>
                <td>@item.LastUpdated</td>
                <td><img src="~/Imgs/BlogImages/@item.Img" width="80" height="80" /></td>
                <td><a asp-page="EditBlog" asp-route-id="@item.Id">Edit</a></td>
                <td><a asp-page="DeleteBlog" asp-route-deleteId="@item.Id">Delete</a></td>
            </tr>
        }
    </tbody>
</table>