                </label>
            </div>
        </form> *@
        @* <form method="post" enctype="multipart/form-data"> *@
            @{
                if (Model.ChangePhoto == true)
                {
                    <div class="form-group">
                        <label asp-for="@Model.Photo" class="control-label"></label>
                        <div class="custom-file">
                            <input asp-for="@Model.Photo" class="custom-file-input form-control" />
                            <span asp-validation-for="@Model.Photo" class="text-danger"></span>
                        </div>
                    </div>
                }
            }
            <div class="form-group">
                <input type="submit" value="Updater båd" class="btn btn-primary" />
            </div>
        </form>
        <form method="get">
            <div>
                <input type="submit" value="Reset Inputs" class="btn btn-secondary" />
            </div>
            <div>
                <label asp-for="@Model.ChangePhoto" class="control-label">Updater Billede?</label>
                <label>
                    <input type="radio" onclick="this.form.submit()" asp-for="@Model.ChangePhoto" , value="false" />Nej
                </label>
                <label>
                    <input type="radio" onclick="this.form.submit()" asp-for="@Model.ChangePhoto" , value="true" />Ja
                </label>
                <span asp-validation-for="@Model.ChangePhoto" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>
