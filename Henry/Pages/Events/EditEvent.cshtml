@page "{Id:int}"
@using Henry.Models
@model Henry.Pages.Events.EditEventModel
@{
    ViewData["Title"] = "Edit event";
}

<h1>Rediger Event</h1>

<form method="post" enctype="multipart/form-data">

    <input type="hidden" asp-for="@Model.EventToUpdate.Id" />
    <div class="form-group">
        <label asp-for="@Model.EventToUpdate.Name" class="control-label">Navn</label>
        <input asp-for="@Model.EventToUpdate.Name" class="form-control" />

    </div>
    <div class="form-group">
        <label asp-for="@Model.EventToUpdate.Description" class="control-label">Beskrivelse</label>
        <input asp-for="@Model.EventToUpdate.Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.EventToUpdate.UserEventStart" class="control-label">Dato</label>
        <input asp-for="@Model.EventToUpdate.UserEventStart" class="form-control" />
        <div class="form-group">
            <label asp-for="@Model.EventToUpdate.UserEventEnd" class="control-label">Dato</label>
            <input asp-for="@Model.EventToUpdate.UserEventEnd" class="form-control" />
        <div class="form-group">
            <label asp-for="@Model.Photo" class="control-label"></label>
            <div class="custom-file">
                <input asp-for="@Model.Photo" class="custom-file-input form-control" />
                <span asp-validation-for="@Model.Photo" class="text-danger"></span>
            </div>
        </div>
     </div>
    <div class="form-group">
        <input type="submit" value="Opdater event" asp-page-handler="Update" class="btn btn-primary" />
        <input type="submit" value="Slet event" asp-page-handler="Delete" class="btn btn-primary" />
    </div>
</form>