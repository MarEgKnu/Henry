@page
@model Henry.Pages.Members.EditMemberModel
@{
    ViewData["Title"] = "Opdater profil";
}
<form method="post" enctype="multipart/form-data">

    <input type="hidden" asp-for="@Model.MemberToUpdate.UserId" />
    <div class="form-group">
        <label asp-for="@Model.MemberToUpdate.Name" class="control-label"></label>
        <input asp-for="@Model.MemberToUpdate.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.MemberToUpdate.Phone" class="control-label"></label>
        <input asp-for="@Model.MemberToUpdate.Phone" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.MemberToUpdate.Email" class="control-label"></label>
        <input asp-for="@Model.MemberToUpdate.Email" class="form-control" />

    </div>
    <div class="form-group">
        <label asp-for="@Model.MemberToUpdate.Password" class="control-label"></label>
        <input asp-for="@Model.MemberToUpdate.Password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.MemberToUpdate.ICE" class="control-label"></label>
        <input asp-for="@Model.MemberToUpdate.ICE" class="form-control" />
     </div>
    <div class="form-group">
        <label asp-for="@Model.Photo" class="control-label"></label>
        <div class="custom-file">
            <input asp-for="@Model.Photo" class="custom-file-input form-control" />
            <span asp-validation-for="@Model.Photo" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Opdater profil" asp-page-handler="Update" asp-route-id="@Model.MemberToUpdate.UserId" class="btn btn-primary" />
        <input type="submit" value="Slet profil" asp-page-handler="Delete" class="btn btn-primary" />
    </div>
</form>