@page
@model Henry.Pages.UserEvents.IndexModel
@{
    ViewData["Title"] = "Tildmeldning";
}

<h1>Tilmeldning</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Navn</th>
            <th>Beskrivelse</th>
            <th>Dato</th>
            <th>Billede</th>
            <th>Tilmeld</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Events)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.DateTime</td>
                <td><img src="~/Imgs/EventImages/@item.Img" width="80" height="80" /></td>
                <label class="switch">
                    <input type="checkbox">
                    <span class="slider"></span>
                </label>
            </tr>
        }
    </tbody>
</table>